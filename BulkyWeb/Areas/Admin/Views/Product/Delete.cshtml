@model Product

@{
    ViewData["Title"] = "Delete Product";
}


<form method="post">
    <!-- Keep hidden ID for POST -->
    <input type="hidden" asp-for="Id" />

    <div class="border border-black p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0 text-center mb-3">Delete Product</h2>
            <hr />
        </div>


        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Title"></label>
            <input asp-for="Title" name="Title" disabled class="form-control rounded shadow-sm bg-transparent"
                   style="border-color: #ced4da;" />
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Description"></label>
            <input asp-for="Description" name="Description" disabled class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" name="ISBN" disabled class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Author"></label>
            <input asp-for="Author" name="Author" disabled class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" name="ListPrice" disabled class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Price"></label>
            <input asp-for="Price" name="ListPrice" disabled class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" name="Price50" disabled class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" name="Price100" disabled class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
        </div>

        <!-- Action buttons -->
        <div class="d-flex flex-wrap gap-3">
            <!-- Trigger Modal -->
            <button type="button" class="btn btn-danger rounded px-4" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                Delete
            </button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary rounded px-4">
                Back To List
            </a>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border border-black">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="confirmDeleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this category?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger rounded">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>
