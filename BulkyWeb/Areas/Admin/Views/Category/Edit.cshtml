@model Category

@{
    ViewData["Title"] = "Edit Category";
}


<form method="post">
    <!-- Preserve ID on post -->
    <input type="hidden" asp-for="Id" />

    <div class="border border-black p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0 text-center mb-3">Edit Category</h2>
            <hr />
        </div>

        <input asp-for="Id" hidden />

        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" name="Name" class="form-control rounded shadow-sm bg-transparent"
                   style="border-color: #ced4da;" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="form- mb-4" style="margin-left: -10px;">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" name="DisplayOrder" class="form-control rounded shadow-sm bg-transparent"
                   style="border-color: #ced4da;" />
            <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex flex-wrap gap-3">
            <button type="submit" class="btn btn-primary rounded px-4">Update</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary rounded px-4">Back To List</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
