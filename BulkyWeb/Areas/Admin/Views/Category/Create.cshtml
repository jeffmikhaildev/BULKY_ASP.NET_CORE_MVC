@model Category

@{
    ViewData["Title"] = "Add Category";
}

<form method="post">
    <div class="border border-black p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0 text-center mb-3">Create Category</h2>
            <hr />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control rounded shadow-sm bg-transparent"
                   style="border-color: #ced4da;" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="form mb-4" style="margin-left: -10px;">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="number" min="1" max="100" class="form-control rounded shadow-sm bg-transparent" style="border-color: #ced4da;" />
            <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
        </div>

        <div class="row gap-4">
            <div class="col-4 col-md-3 p-0">
                <button type="submit" class="btn btn-primary rounded form-control">Create</button>
            </div>
            <div class="col-4 col-md-3 p-0">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary rounded form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}